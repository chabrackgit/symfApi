{% extends 'base.html.twig' %}

{% block title %}Catalog{% endblock %}

{% block body %}
    <h1>{{ catalog.reference }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ catalog.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ catalog.reference }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ catalog.description }}</td>
            </tr>
            <tr>
                <th>créé le</th>
                <td>{{ catalog.createdAt ? catalog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>mis à jour le</th>
                <td>{{ catalog.updatedAt ? catalog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('catalog_index') }}" class="btn btn-primary">Retour à la liste</a>


    {{ include('catalog/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Commande delivery - nouvelle adresse{% endblock %}

{% block body %}

<div class="container">
    <div class="col-8 mx-auto">
        <h1 class="mb-5">Ajouter une nouvelle adresse</h1>
        {{ form_start(form) }}
        {{ form_row(form.titre) }}
        {{ form_row(form.infoaddress) }}
        {{ form_row(form.infoautre) }}
        <div class="row">
            <div class="col-4">
                {{ form_row(form.postalCode) }}
            </div>
            <div class="col-8">
                {{ form_row(form.city) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

{{ form_end(form) }}

{% endblock %}
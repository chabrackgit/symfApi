{% extends 'base.html.twig' %}

{% block title %}Espace inscription{% endblock %}

{% block body %}
    <form action="#" method="POST">
    <div class="container">
        <div class="form-group">
       
            <h1>Inscription</h1>

            {{ form_start(form) }}
            
            {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder':'example@email.fr'}}) }}
            {{ form_row(form.username, {'label': 'Nom utilisateur', 'attr': {'placeholder':'julien22'}}) }}
            {{ form_row(form.lastname, {'label': 'Nom', 'attr': {'placeholder':'DEVILLE'}}) }}
            {{ form_row(form.firstname, {'label': 'Pr√©nom', 'attr': {'placeholder':'fabien'}}) }}
            {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder':'******'}}) }}
            {{ form_row(form.passwordConfirm, {'label': 'Confirmez votre mot de passe', 'attr': {'placeholder':'******'}}) }}


            <button type="submit" class="btn btn-primary">Inscription</button>
            {{ form_end(form) }}
        </div>
    </div>
</form>
{% endblock %}
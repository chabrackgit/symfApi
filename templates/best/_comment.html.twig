
<div class="row mt-3">
    <div class="col-9">
        <table class="table">
            <thead>
                <tr>
                    <th>Infos</th>
                    <th>Commentaires</th>
                </tr>
            </thead>
            <tbody>
            {% if comments %}
                {% for comment in comments %}
                    <tr>
                        <td width="25%">    
                            <p style="line-height:5px;">Ecrit par {{ comment.user.username }}</p>  
                            <small> le {{ comment.createdAt ? comment.createdAt|date('d-m-Y H:i:s') : '' }}</small>
                        </td>
                        <td width="75%">
                        <p style="line-height:5px;"><b>{{ comment.titre }}</b></p>
                        <p>{{ comment.infotext }}</p>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                    <tr>
                        <td></td>
                        <td>aucun commentaire pour cet article, soyez le premier Ã  donner votre avis</td>
                    </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
    {% if app.user %}
    <div class="col-3">
        <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Ajouter un commentaire</button>
       
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Nouveau commentaire</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Listes des articles</h1>
    <br>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Description</th>
                <th>Catalogue</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.reference }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.catalog.reference }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">détails</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-secondary">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune information</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}" class="btn btn-primary">Créer</a>
{% endblock %}
